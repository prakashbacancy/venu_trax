<section class="content-wrapper">
  <div class="content position-relative">
    <h2><b>Simulation Form</b></h2>
    <%= form_for @simulation, html: {class: 'admin-form'} do |f|  %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">#Days/Event Per Year
            <span class="required"> * </span></label>
            <%= f.text_field :event_per_year, class:"form-control", placeholder:"#Days/Event Per Year", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="subject"> Daily Seating Capacity 
              <span class="required"> * </span>
            </label>
            <%= f.text_field :daily_seating_capacity, class:"form-control", placeholder: " Daily Seating Capacity", required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">Estimated Avg Annual Attendance(%)
            <span class="required"> * </span></label>
            <%= f.text_field :annual_attendance_per, class:"form-control", placeholder:"Estimated Avg Annual Attendance(%)", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject">Estimated % Visitor Wifi Login's 
            <span class="required"> * </span></label>
            <%= f.text_field :visitor_wifi_login, class:"form-control", placeholder: "Estimated % Visitor Wifi Login's", required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">Cost LP Impression
            <span class="required"> * </span></label>
            <%= f.text_field :cost_lp_impression, class:"form-control", placeholder:"Cost LP Impression", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> Daily/Event Usage Impression
            <span class="required"> * </span> </label>
            <%= f.text_field :event_usage_impression, class:"form-control", placeholder: "Daily/Event Usage Impression", required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">Per Day/Event
            <span class="required"> * </span></label>
            <%= f.text_field :cpm_impression_cost, class:"form-control", placeholder:"Per Day/Event", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> No of Months
            <span class="required"> * </span></label>
            <%= f.text_field :contract_month, class:"form-control", placeholder: "No of Months", required: true  %>
          </div>
        </div>
      </div>
      <div class="d-inline-flex flex-column flex-sm-row">
        <%= f.submit :save, class: 'btn btn-primary border-radius-3 mb-4 mt-4 mr-3' %>
        <%= link_to "Cancel", root_path, class: 'btn btn-primary border-radius-3 mb-4 mt-4' %>
      </div>
    <% end -%>
  </div>
</section>