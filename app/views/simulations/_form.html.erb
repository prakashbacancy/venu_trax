<div class="modal-header">
  <h5 class="modal-title">Input Simulation Data</h5>
</div>

<div class="modal-body simulation-form">
  <%= form_for @simulation, html: {class: 'admin-form'} do |f|  %>
    <%#= render "devise/shared/error_messages", resource: resource %>
    <p class="text-gray fs-14 mt-3">Please enter all input details to see your Revenue Analytics</p>
    <div class="px-3 mt-4 border py-2 border-light">
      <%= f.label 'Venue Details', class: 'text-capitalize fs-17 fw-600' %>
      <div class=" row align-items-center mt-2 ">
        <%= f.label '#Days/Events Per Year', class: 'text-capitalize fs-17 col-8 col-md-9 ' %>
        <%= f.number_field :event_per_year, autofocus: true, placeholder: 0,  class: 'form-control col-3 col-md-2 d-inline', required: true %>
      </div>
      <div class=" row align-items-center mt-2 ">
        <%= f.label :daily_seating_capacity, class: 'text-capitalize fs-17 col-8 col-md-9 ' %>
        <%= f.number_field :daily_seating_capacity, autofocus: true, placeholder: 0, class: 'form-control col-3 col-md-2 d-inline', required: true %>
      </div>
    </div>

    <div class="px-3 mt-4 border py-2 border-light">
      <%= f.label 'Venue Visitor Attendance', class: 'text-capitalize fs-17 fw-600' %>
      <div class=" row align-items-center mt-2 ">
        <%= f.label 'Estimated Avg Annual Attendance(%)', class: 'text-capitalize fs-17 col-8 col-md-9 ' %>
        <%= f.number_field :annual_attendance_per, autofocus: true, placeholder: '0.00', class: 'form-control col-3 col-md-2 d-inline', required: true %>
      </div>
      <div class=" row align-items-center mt-2 ">
        <%= f.label "Estimated % Visitor Wifi Login's ", class: 'text-capitalize fs-17 col-8 col-md-9 ' %>
        <%= f.number_field :visitor_wifi_login, autofocus: true, autocomplete: "", placeholder: '0.00', class: 'form-control col-3 col-md-2 d-inline' %>
      </div>
    </div>

    <div class="px-3 mt-4 border py-2 border-light">
      <%= f.label 'LP CPM Cost', class: 'text-capitalize fs-17 fw-600' %>
      <div class=" row align-items-center mt-2 ">
        <%= f.label :cost_lp_impression, class: 'text-capitalize fs-17 col-8 col-md-9 ' %>
        <%= f.number_field :cost_lp_impression, autofocus: true, autocomplete: "", placeholder: '0.00', class: 'form-control col-3 col-md-2 d-inline' %>
      </div>
    </div>

    <div class="px-3 mt-4 border py-2 border-light">
      <%= f.label 'Visitor WIFI Impressions', class: 'text-capitalize fs-17 fw-600' %>
      <div class=" row align-items-center mt-2 ">
        <%= f.label 'Daily/Event Usage Impression', class: 'text-capitalize fs-17 col-8 col-md-9 ' %>
        <%= f.number_field :event_usage_impression, autofocus: true, autocomplete: "", placeholder: '0', class: 'form-control col-3 col-md-2 d-inline' %>
      </div>
    </div>

    <div class="px-3 mt-4 border py-2 border-light">
      <%= f.label 'CPM Impression Cost', class: 'text-capitalize fs-17 fw-600' %>
      <div class=" row align-items-center mt-2 ">
        <%= f.label 'Per Day/Event', class: 'text-capitalize fs-17 col-8 col-md-9 ' %>
        <%= f.number_field :cpm_impression_cost, autofocus: true, autocomplete: "", placeholder: '0.0', class: 'form-control col-3 col-md-2 d-inline' %>
      </div>
    </div>

    <div class="px-3 mt-4 border py-2 border-light">
      <%= f.label 'Venue Contract Term', class: 'text-capitalize fs-17 fw-600' %>
      <div class=" row align-items-center mt-2 ">
        <%= f.label 'No of Months', class: 'text-capitalize fs-17 col-8 col-md-9 ' %>
        <%= f.number_field :contract_month, autofocus: true, autocomplete: "", placeholder: '0.00', class: 'form-control col-3 col-md-2 d-inline' %>
      </div>
    </div>

    <div class="modal-footer modal-footer-fixed">
      <%= f.submit "Save", class: "btn btn-primary" %>
      <button type="button" class="btn btn-light bg-light-gray text-dark" data-dismiss="modal">Close</button>
    </div>
  <% end %>
</div>
