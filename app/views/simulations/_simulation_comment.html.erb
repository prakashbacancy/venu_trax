<div class="shadow p-3 mb-5 bg-white rounded mt-4 note_shadow_box_<%= @simulation.id %>">
      <%= link_to new_venue_simulation_comment_path( params[:venue_id], @simulation.id), remote: true, class: 'text-primary mt-3 fs-16 fw-600 add_comment mr-2' do %>
        <%= image_pack_tag 'home/ic_comment.svg', class: 'mr-3' %> Add Comment
      <% end %>
      | <a class="text-primary mt-3 fs-16 fw-600 ml-2" data-toggle="collapse" href="#simulation_comment_partial_<%= @simulation.id %>" role="button" aria-expanded="false" aria-controls="simulation_comment_partial_<%= @simulation.id %>">
          Comments <i class="fa fa-chevron-down"></i>
        </a>
      <div class="add_comment_for_simulation_<%= @simulation.id %> main_comment_form_div"></div>
      <div class="collapse show" id="simulation_comment_partial_<%= @simulation.id %>">
        <% if @simulation.comments.present? %>
          <% @simulation.comments.each do |comment| %>
            <div class="card card-body mt-2">
              <p class="fs-18"><%= comment.description.html_safe %></p>
              <p class="text-gray mt-3 fs-16"> -- <%= "#{comment.user.full_name} | #{comment.created_at.strftime('%b %d, %Y %l:%M %p')}" %></p>
            </div>
          <% end %>
        <% else %>
          <div class="card card-body mt-2">
            <p class="text-center text-gray">No Comments yet</p>
          </div>
        <% end %>
      </div>
    </div>