<div class="details-view">
  <div class="py-3 position-relative tab-section ">
    <div class="d-flex align-items-center justify-content-between search-card border-0 px-0 p-0 sub-tab">
      <ul class="nav nav-tabs mb-0 border-0" id="myTab" role="tablist">
        <% klass.groups.root_groups.each_with_index do |group, index| %>
          <li class="nav-item">
            <a class='nav-link fs-16 mx-sm-1 header_tabs <%= 'active' if index == 0 %>' id="group-<%= group.id %>-tab" data-toggle="tab" href="#group-<%= group.id %>-tab-body"
              role="tab" aria-controls="group-<%= group.id %>-tab-body" aria-selected="false"><%= group.label %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-content" id="myTabContent">
      <% klass.groups.each_with_index do |group, index| %>
        <div class='tab-pane fade  <%= 'active show' if index == 0 %>' id="group-<%= group.id %>-tab-body" role="tabpanel" aria-labelledby="group-<%= group.id %>-tab">
          <div class=" bg-white  mt-4 overflow-hidden">
            <% group.descendants.each do |group| %>
              <div class="shadow p-0 mb-3 bg-white rounded detail_box">
                <div class="box-header border-bottom py-3">
                  <div class="d-flex align-items-center justify-content-between flex-wrap">
                    <div>
                      <p class="text-dark2 fw-700 fs-16 text-uppercase"><%= group.label %></p>
                    </div>
                    <%= link_to 'Edit', edit_brand_path(brand, group_id: group.id), class: 'btn btn-primary btn-sm', remote: true %>
                  </div>
                </div>
                <div class="box-body">
                  <% count = 0 %>
                  <div class="admin-table bg-white table-responsive">
                    <table class="table table-bordered w-100 mb-0 attachment-table">
                      <thead class="thead-dark">
                        <tr>
                          <th>#</th>
                          <th>Field Name</th>
                          <th>Field Value</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if group.fields.present? %>
                          <% group.fields.each do |field|%>
                            <tr>
                              <td><%= count = count + 1 %></td>
                              <td width="70%">
                                <div class="fs-15 <%= 'asterisk' if field.required? %>"><%= field.label %></div>
                                <div class="fw-400 text-gray mt-2 fs-14"><%= field.info %></div>
                              </td>
                              <td><div class="text-gray fs-14"><%= pretty_value(field, brand) %></div></td>
                            </tr>
                          <% end %>
                        <% else %>
                          <tr>
                            <td colspan='3' class="text-center text-gray">No fields available.</td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
