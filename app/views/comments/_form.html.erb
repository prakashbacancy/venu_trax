<div class="mt-2">
  <%= form_for [@module, @comment.commentable, @comment], remote: true do |f| %>
    <div class="row">
      <div class="col-md-8">
        <div class="form-group">
          <%= f.text_field :description, class:"form-control", placeholder:"Enter Comment", required: true %>
        </div>
      </div>
      <%= f.hidden_field :commentable_type, value: f.object.commentable_type %>
      <%= f.hidden_field :commentable_id, value: f.object.commentable_id %>
      <div class="col-md-4">
        <%= f.submit 'Add', class: "btn btn-primary" %>
        <%= link_to 'Close', 'javascript:(0)', class: 'btn btn-light bg-light-gray text-dark close_comment_form' %>
      </div>
    </div>
  <% end %>
</div>
<script>
  $('.close_comment_form').on('click', function(){
    $(this).closest('.main_comment_form_div').html('');
  })
</script>
