<% flash.each do |key, value| %>
  <%= content_tag :div, class: "#{flash_class(key)} p-3 w-100 rounded alert alert-header-msg text-center" do %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
    </button>
    <%= value %>
  <% end %>
<% end %>
<% flash.clear %>
<script type="text/javascript">
	$(".alert-header-msg").fadeOut(8000);
</script>