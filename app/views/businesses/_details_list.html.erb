<div class="details-view">
  <div class="py-3 position-relative tab-section ">
    <div class="d-flex align-items-center justify-content-between search-card border-0 px-0 p-0 sub-tab">
      <ul class="nav nav-tabs mb-0 border-0" id="myTab" role="tablist">
        <% klass.groups.root_groups.each_with_index do |group, index| %>
          <li class="nav-item">
            <a class='nav-link fs-16 mx-sm-1 header_tabs sub_header_tabs <%= 'active' if index == 0 %>' id="group-<%= group.id %>-tab" data-toggle="tab" href="#group-<%= group.id %>-tab-body"
              role="tab" aria-controls="group-<%= group.id %>-tab-body" aria-selected="false"><%= group.label %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="tab-content" id="businessDetailsSubTabs">
      <% klass.groups.root_groups.each_with_index do |group, index| %>
        <div class='tab-pane fade  <%= 'active show' if index == 0 %>' id="group-<%= group.id %>-tab-body" role="tabpanel" aria-labelledby="group-<%= group.id %>-tab">
          <div class=" bg-white  mt-4 overflow-hidden">
            <% group.descendants.each do |group| %>
              <div class="shadow p-0 mb-3 bg-white rounded detail_box">
                <div class="box-header border-bottom py-3">
                  <div class="d-flex align-items-center justify-content-between flex-wrap">
                    <div>
                      <p class="text-dark2 fw-700 fs-16 text-uppercase"><%= group.label %></p>
                    </div>
                    <%= link_to 'Edit', edit_business_path(business, group_id: group.id), class: 'btn btn-primary btn-sm', remote: true %>
                  </div>
                </div>
                <div class="box-body">
                  <% group.fields.each do |field|%>
                    <div class="row ">
                      <div class="col-md-4">
                        <span class="fw-600 fs-15 <%= 'asterisk' if field.required? %>"><%= field.label %>:</span>
                      </div>
                      <div class="col-md-6">
                        <span class="text-gray fs-14">
                          <%= pretty_value(field, business) %>
                        </span>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
