<% if params[:business][:group_id].present? %>
  $('.header_flash_message').html("<%= j render 'layouts/flash_messages' %>");
  $('#group-<%= params[:business][:group_id] %>-tab-body').html('<%= j render(partial: 'group_fields', locals: {klass: Klass.business, business: @business, group: business_group(params[:business][:group_id]) }) %>')
  $("#right_modal").modal('hide');
<% else %>
  <% if params[:add_more].present? %>
    $('#right-modal-content').html('<%= j render(partial: 'form', locals: { data: @data, group: @group }) %>')
    $('#flashMessage').html("<%= j render 'layouts/flash_messages' %>");
    $("#right_modal").modal('show');
    $('.modal-content').scrollTop(0);
    $('form').parsley();
    $('.business_list_div').html('<%= j render(partial: 'business_list', locals: {businesses: @businesses}) %>')
  <% else %>
    $(window.location.replace("<%= businesses_path %>"))
  <% end %>
<% end %>
