<section class="content-wrapper">
  <div class="content position-relative">
    <h2><b>Business Form</b></h2>
    <%= form_for @business do |f|  %>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">Name</label>
            <span class="required"> * </span>
            <%= f.text_field :name, class:"form-control", placeholder:"Name", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> Industry </label>
            <span class="required"> * </span>
            <%= f.text_field :industry, class:"form-control", placeholder: "Industry", required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">Type</label>
            <span class="required"> * </span>
            <%= f.text_field :business_type, class:"form-control", placeholder:"Type", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> Phone No </label>
            <span class="required"> * </span>
            <%= f.text_field :phone_no, class:"form-control", placeholder: "Phone No", required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">Zip Code</label>
            <span class="required"> * </span>
            <%= f.text_field :zip_code, class:"form-control", placeholder:"Zip Code", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> Address </label>
            <span class="required"> * </span>
            <%= f.text_field :address, class:"form-control", placeholder: "Address", required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">City</label>
            <span class="required"> * </span>
            <%= f.text_field :city, class:"form-control", placeholder:"City", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> State </label>
            <span class="required"> * </span>
            <%= f.text_field :state, class:"form-control", placeholder: "State", required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="Name">No of Employee</label>
            <span class="required"> * </span>
            <%= f.text_field :no_of_employee, class:"form-control", placeholder:"No of Employee", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> Annual Revenue </label>
            <span class="required"> * </span>
            <%= f.text_field :annual_revenue, class:"form-control", placeholder: "Annual Revenue", required: true  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> Description </label>
            <span class="required"> * </span>
            <%= f.text_area :description, class:"form-control", placeholder: "Description", required: true  %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group ">
            <label for="subject"> Domain </label>
            <span class="required"> * </span>
            <%= f.text_area :domain, class:"form-control", placeholder: "Description", required: true  %>
          </div>
        </div>
      </div>
      <div class="d-inline-flex flex-column flex-sm-row">
        <%= f.submit :save, class: 'btn btn-admin mb-2 mr-3' %>
        <%= link_to "Cancel", businesses_path, class: 'btn btn-admin-cancel' %>
      </div>
    <% end -%>
  </div>
</section>