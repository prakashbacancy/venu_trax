<div class="content position-relative p-4">
  <%= link_to businesses_path, class: 'fs-14 text-blue1 fw-600' do %>
    <i class="fa fa-chevron-left mr-2"></i>All Business
  <% end %>
  <div class="d-flex mt-3">
    <div class="mr-3">
      <%= image_pack_tag 'home/ic_profile_pic.svg', class: "img-fluid" %>
    </div>
    <div class="">
      <h3 class="fw-400 text-break text-dark2 fs-20"><%= @business.name %></h3>
      <h6 class="fs-14  text-dark2"><%= @business.phone_no %></h6>
      <div class="mt-3">
        <ul id="mylist" class="text-center d-flex">
          <li class="m-0 mr-3">
            <a class="btn sharp fs-12 enable_notes" data-toggle="tab" href="#notes-tab-body" role="tab" aria-controls="notes-tab-body" aria-selected="true">
              <i><%= image_pack_tag 'home/ic_note.svg' %></i>Notes
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
  <div class="row border p-4">
    <div class="col-md-12">
      <a class="text-dark fw-500 d-block d-flex" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        <span class="mr-auto fs-16">About Business</span><i class="fa fa-chevron-down fs-15"></i>
      </a>
    </div>
  </div>
<div class="collapse show " id="collapseExample">
  <div class="card card-body border-0">
    <div class="row">
      <div class="col-md-12 text-gray fs-15">
        <%= @business.description %>
      </div>
    </div>
    <div class="row mt-4">
      <% @info_group.fields.visible.each do |field| %>
        <% if field.column_type == 'Text Area HTML' %>
          <div class="col-12 mt-3">
        <% else %>
          <div class="col-sm-6 mt-3">
        <% end %>
          <p class="fw-700 fs-16"><%= field.label %></p>
          <p class="text-gray fs-15"><%= pretty_value(field, @business) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
