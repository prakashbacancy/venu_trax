<% attachments = @venue&.attachments || @attachable.attachments %>
	<div class="card card-body border-0">
	  <div class="row">
			<% if attachments.present? %>
				<% attachments.each do |attachment| %>
	    		<div class="col-md-10 col-sm-9 text-gray fs-16 d-flex align-items-start">
			      <i class="fas fa-paperclip mt-1"></i>
			      <div class="ml-2">
			        <p class="fs-14 word-break"><%= attachment.venue_file.filename.to_s %></p>
			      </div>
	    		</div>
	    		<div class="col-md-2 col-sm-3">
		    		<%= link_to venue_attachment_path((@venue&.id || @attachable.id) ,attachment), method: :delete, remote: true, data: {confirm: 'Do you want to Delete this Attachment?'}, class: 'common-link pull-right edit-delete icon' do %>
            	<%= image_pack_tag 'home/ic_delete.svg'%>
         	 	<% end %>
         	</div>
		    <% end %>
			<% else %>
				<span> No Attachment found. </span>
			<% end %>
	  </div>
	</div>
