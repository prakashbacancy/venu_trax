<div class="content position-relative p-4">
  <% unless venue_contact?(current_user) %>
    <%= link_to business_path(@business, anchor: 'venues-tab-body'), class: 'fs-14 text-blue1 fw-600' do %>
      <i class="fa fa-chevron-left mr-2"></i>All Venues
    <% end %>
  <% end %>
  <div class="d-flex mt-3">
    <div class="mr-3">
      <% if @venue.logo.attached? %>
        <%= image_tag @venue.logo, class: "img-fluid logo-img", width: '100', height: '100' %>
      <% else %>
        <%= image_pack_tag 'sample/ic_placeholder.svg', class: "img-fluid logo-img" %>
      <% end %>
    </div>
    <div class="">
      <h3 class="fw-400 text-break text-dark2 fs-20"><%= @venue.name %></h3>
      <h6 class="fs-14  text-dark2"><%= @venue.phone_no %></h6>
      <div class="mt-3">
        <ul id="mylist" class="text-center d-flex">
          <li class="m-0 mr-3">
            <a class="btn sharp fs-12 text-dark2 enable_notes" href="javascript:(0)">
              <i><%= image_pack_tag 'home/ic_note.svg', width: "29" %></i>Notes
            </a>
          </li>
          <li class="m-0 mr-3">
            <a class="btn sharp fs-12 text-dark2 enable_emails" href="javascript:(0)">
              <i><%= image_pack_tag 'home/ic_email.svg', width: "29" %></i>Email
            </a>
          </li>
          <li class="m-0 mr-3">
            <a class="btn sharp fs-12 text-dark2 enable_meetings" href="javascript:(0)">
              <i><%= image_pack_tag 'home/ic_meet.svg', width: "29" %></i>Meet
            </a>
          </li>
          <li class="m-0 mr-3">
            <a class="btn sharp fs-12 text-dark2 enable_events" href="javascript:(0)">
              <i><%= image_pack_tag 'home/ic_events.svg', width: "29" %></i>Events
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="row border p-4">
  <div class="col-md-12">
    <a class="text-dark fw-500 d-block d-flex" data-toggle="collapse" href="#collapseExample"
      role="button" aria-expanded="false" aria-controls="collapseExample">
      <span class="mr-auto fs-16 fw-600 text-dark2">About Business</span><i class="fa fa-chevron-down fs-15"></i>
    </a>
  </div>
</div>
<div class="collapse show" id="collapseExample">
  <div class="card card-body border-0">
    <div class="row">
      <div class="col-md-12 text-light-gray fs-15">
        <%= @venue.description %>
      </div>
    </div>
    <div class="row mt-4">
      <% @info_group.fields.visible.each do |field| %>
        <% if field.column_type == 'Text Area HTML' %>
          <div class="col-12 mt-3">
        <% else %>
          <div class="col-sm-6 mt-3">
        <% end %>
          <p class="fw-700 fs-16"><%= field.label %></p>
          <p class="text-gray fs-15"><%= pretty_value(field, @venue) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>