<div class=" bg-white  mt-3 overflow-hidden">
  <% group.descendants.each do |group| %>
    <div class="shadow p-0 mb-3 bg-white rounded mt-4 detail_box">
      <div class="box-header border-bottom px-3 py-2">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
          <div>
            <p class="text-dark2 fw-700 fs-16 text-uppercase"><%= group.label %></p>
          </div>
          <%= link_to 'Edit', edit_venue_path(venue, group_id: group.id), class: 'btn btn-primary btn-sm', remote: true %>
        </div>
      </div>
      <div class="box-body p-3">
        <% group.fields.each do |field|%>
          <div class="row ">
            <div class="col-md-4">
              <span class="fw-600 fs-15 <%= 'asterisk' if field.required? %>"><%= field.label %>:</span>
            </div>
            <div class="col-md-6">
              <span class="text-gray fs-14">
                <%= pretty_value(field, venue) %>
              </span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
