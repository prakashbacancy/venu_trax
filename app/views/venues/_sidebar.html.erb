<button class="toggle-sidebar-button pl-3 pr-1 py-2 pt-2 bg-white mob-btn">
  <i class="icon-box fa fa-angle-double-left"></i></button>
<aside class="main-sidebar  pt-2 bg-white border-left" id="sticky">
  <div class="main-sidebar-inner">
    <div class="sidebar mb-1 sidebar_venue_contacts">
      <%= render 'venue_contacts/sidebar_venue_contacts', venue_contacts: @venue_contacts, venue: @venue %>
    </div>
    <div class="sidebar mb-1">
      <div class="px-3 pt-3">
        <div class="">
          <div class="d-block d-flex align-items-center justify-content-between venue-contact" data-toggle="collapse"
            href="#collapseAttach" role="button" aria-expanded="true" aria-controls="collapseExample">
            <div class="text-dark fw-500"><span class="mr-auto fs-16 fw-700 text-dark2 ">Attachments(<span class="total-count"><%= @venue.attachments.count %></span>)</span><i
                class="fa fa-chevron-down fs-14 ml-2"></i></div>
            <%= link_to "+ Add", new_venue_attachment_path(venue_id: params[:id]), class: "text-blue1 fw-600 fs-14 add_btn", remote: true %>
          </div>
        </div>
        <div class="attachment"></div>
      </div>
      <div class="collapse show" id="collapseAttach">
        <%= render partial: 'attachment_list', locals: {venue: @venue, attachable: @attachable} %>
      </div>
    </div>
  </div>
</aside>
