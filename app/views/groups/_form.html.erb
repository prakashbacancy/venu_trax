<div class="modal-header">
  <h5 class="modal-title"><%= klass.label %> Group</h5>
</div>
<div class="modal-body">
  <%= form_for group, remote: true, class: "form-inline" do |f| %>
    <% unless f.object.new_record? %>
      <div class="form-group">
        <%= label_tag :name %>
        <%= f.text_field :name, class: 'form-control', disabled: true %>
      </div>
    <% end %>
    <div class="form-group">
      <%= label_tag :label %>
      <%= f.text_field :label, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= label_tag :parent_group %>
      <%= f.select :parent_id, options_for_select(klass.groups.root_groups_except(group).pluck(:label, :id), group.parent_id), {include_blank: 'Select Parent Group'}, class: 'form-control' %>
    </div>
    <%= f.hidden_field :klass_id, value: klass.id %>
    <div class="modal-footer modal-footer-fixed ">
      <%= f.submit "Save", class: 'btn btn-primary' %>
      <button type="button" class="btn btn-light bg-light-gray text-dark" data-dismiss="modal">Close</button>
    </div>
  <% end %>
</div>
