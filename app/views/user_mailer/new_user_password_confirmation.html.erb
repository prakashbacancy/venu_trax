<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
<table style="border-spacing:0;border-collapse:collapse;vertical-align:top;text-align:left;background-color:#f3f3f3;height:100%;width:100%;color:#545d63;font-family:'Helvetica Neue',Helvetica,Arial,sans-serif;font-weight:400;line-height:1.3;font-size:16px;margin:0;padding:0" bgcolor="#f3f3f3">
  <tbody>
    <tr style="vertical-align:top;text-align:left;padding:0" align="left">
      <td align="center" valign="top" style="word-wrap:break-word;border-collapse:collapse!important;vertical-align:top;text-align:left;color:#545d63;font-family:'Helvetica Neue',Helvetica,Arial,sans-serif;font-weight:400;line-height:1.3;font-size:16px;margin:0;padding:0">
        <center style="width:100%;min-width:580px">
          <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" style="background-color:#2E3F50; max-width: 550px;width:550px;margin-top:20px;border-top-left-radius: 4px;
          border-top-right-radius: 4px;">
            <tbody>
              <%= render "devise/shared/header"%>
              <tr>
                <td>
                <table align="center" border="0" cellpadding="0" cellspacing="0" role="presentation" style="background:#ffffff;width:100%;">
                    <tbody>
                      <tr>
                        <td style="direction:ltr;font-size:0px;padding:20px 30px 30px 20px; text-align: center;">
                          <table border="0" cellpadding="0" cellspacing="0" role="presentation" style="vertical-align:top;" width="100%">
                            <tr>
                              <td class="inner contents center" style="padding-top:15px;padding-bottom:15px;padding-right:30px;padding-left:30px;text-align:left;">
                                <p class="h1 center" style="Margin:0;text-align:center;font-family: 'Roboto', sans-serif;font-weight:700 bolder;font-size:24px;Margin-bottom:10px;color:black"><%= @user.full_name&.capitalize || 'User' %>, Welcome to VenuTRAX!</p>
                              </td>
                            </tr>
                            <tr>
                              <td class="title" style="font-size:16px; line-height: 24px; color: #585858;padding-bottom: 30px;text-align: left;font-family: 'Roboto', sans-serif;font-weight: 400;">We're excited to have you get started. First, you need to confirm your account & set your password, to do so just press the button below.</td>
                            </tr>
                          
                            <tr>
                              <td style="padding-top: 10px; text-align: center;">
                                <%= link_to 'Setup Your Account', edit_password_url(@user, reset_password_token: @raw, new_user: true), class: 'btn', style: "background-color: #007AFF; border-radius: 3px; color: #fff; border-color: #007AFF;  padding: .6rem 1rem; font-family: 'Roboto', sans-serif; font-size: 17px; font-weight: 500; border: transparent 1px solid; min-width: 226px; border-radius: 5px;text-decoration:none;text-align: center;" %></td>               
                            <tr>
                              <td class="title" style="font-size:16px; padding-top: 30px;   line-height: 24px; color: #585858; padding-bottom: 20px;text-align: left;font-family: 'Roboto', sans-serif;font-weight: 400;">If you have any questions, we're always happy to help out.</td>
                            </tr>
                            <tr>
                              <td class="title" style="font-size:16px;    line-height: 24px; color: #585858; text-align: left;font-family: 'Roboto', sans-serif; font-weight: 400;">Regards,<br/>
                              VenuTRAX Team</td>
                            </tr>
                          </table>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </td>
              </tr>
              <%= render "devise/shared/footer" %>
            </tbody>
          </table>
        </center>
      </td>
    </tr>
  </tbody>
</table>
