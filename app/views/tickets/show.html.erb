<section class="content-wrapper">
  <div class="page-title border-bottom title-border">
    <div class="content">
      <div class="row">
        <div class="col-lg-12">
          <h5 class="text-gray d-inline"><%= link_to "Tickets", tickets_path, class: 'text-gray d-inline' %></h5>
          <h5 class="text-gray d-inline"> <i class="fa fa-angle-right"></i></h5>
          <h5 class="text-dark d-inline">View Ticket</h5>
        </div>
      </div>
    </div>
  </div>
  <div class="content position-relative">
    <div class="shadow p-3 mb-5 bg-white rounded mt-4 note_shadow_box_<%= @ticket.id %>">
      <p class="fs-18 ticket-comment-header"><b class="mr-3">#<%=@ticket.id %></b>  <%= @ticket.description.html_safe %><b class="float-right"><%= @ticket.status %></b></p>
      <p class="text-gray mt-3 fs-16"> -- <%= "#{@ticket.created_by} | #{@ticket.created_at.strftime('%b %d, %Y %l:%M %p')}" %> </p>
      <div class="mt-3">
        <%= link_to new_ticket_comment_path(@ticket.id), remote: true, class: 'text-primary fs-16 fw-600 add_comment mr-2' do %>
          <%= image_pack_tag 'home/ic_comment.svg', class: 'mr-3' %> Add Comment
        <% end %>
        | <a class="text-primary fs-16 fw-600 ml-2 text-nowrap" data-toggle="collapse" href="#ticket_comment_partial_<%= @ticket.id %>" role="button" aria-expanded="false" aria-controls="ticket_comment_partial_<%= @ticket.id %>">
            Comments <i class="fa fa-chevron-down"></i>
          </a>
      </div>
      <div class="add_comment_for_ticket_<%= @ticket.id %> main_comment_form_div"></div>
      <div class="collapse show comments_list_div" id="ticket_comment_partial_<%= @ticket.id %>">
        <% if @ticket.comments.present? %>
          <% @ticket.comments.each do |comment| %>
            <div class="card card-body mt-2">
              <p class="fs-16"><%= comment.description.html_safe %></p>
              <p class="text-gray mt-2 fs-14"> -- <%= "#{comment.user.full_name} | #{comment.created_at.strftime('%b %d, %Y %l:%M %p')}" %></p>
            </div>
          <% end %>
        <% else %>
          <div class="card card-body mt-2">
            <p class="text-center text-gray">No Comments yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>