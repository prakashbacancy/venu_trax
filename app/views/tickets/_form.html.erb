<div class="modal-header">
  <% title_half = (params[:action] == 'new' or params[:action] == 'create' or params[:add_more].present?) ? 'Add' : 'Edit' %>
  <h5 class="modal-title"><%= title_half %> Ticket</h5>
  <div id="flashMessage", class="inner_flash_message"></div>
</div>
<div class="modal-body">
  <%= form_for @ticket, remote: true do |f| %>
    <div class="form-group">
      <%= f.label :title, 'Title', class: 'text-capitalize fs-17 asterisk' %><br />
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :status, 'Status', class: 'text-capitalize fs-17 asterisk' %><br />
     <%= f.select :status, options_for_select(Ticket::STATUS,  f.object.status), { prompt: 'Select Status' }, { class: 'form-control', required: true} %>
    </div>
    <div class="form-group">
      <%= f.label :description, 'Description', class: 'text-capitalize fs-17 asterisk' %><br />
      <%= f.text_area :description, class: 'form-control h-auto', required: true, rows: 8 %>
    </div>
     <div class="form-group">
      <%= f.label :created_by, 'Created By', class: 'text-capitalize fs-17 asterisk' %><br />
      <%= f.text_field :created_by, value: current_user.full_name, class: 'form-control h-auto not-allowed', required: true, readonly: true %>
    </div>
    <div class="modal-footer modal-footer-fixed">
      <% save_button_title = f.object.new_record? ? 'Add' : 'Save' %>
      <%= f.submit save_button_title, class: "btn btn-primary" %>
      <button type="button" class="btn btn-light bg-light-gray text-dark" data-dismiss="modal">Close</button>
    </div>
  <% end %>
