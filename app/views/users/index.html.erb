<section class="content-wrapper">
  <div class="page-title border-bottom title-border">
    <div class="content">
      <div class="row">
        <div class="col-lg-12">
          <h5 class="text-gray d-inline">User Management</h5>
          <h5 class="text-gray d-inline"> <i class="fa fa-angle-right"></i></h5>
          <h5 class="text-dark d-inline">View User</h5>
        </div>
      </div>
    </div>
  </div>
  <div class="content position-relative">
    <div class='row mt-3'>
      <div class="col-md-4">
        <%# <input type="text" id="searchbox" class="form-control " style="width: 50%;display: inline;"> %>
        <div class="row">
          <div class="col-md-8">
            <div class="form-group has-search">
              <span class="fa fa-search form-control-feedback"></span>
              <input type="text" class="form-control" placeholder="Search User" id="searchbox">
            </div>
          </div>
          <div class="col-md-4">
            <button class="btn btn-primary form-group search_btn">Search</button>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="add-item-btn mb-3 d-md-flex flex-wrap flex-row-reverse">
          <%= link_to "Add User", new_user_path, remote: true, class: 'btn btn-primary mb-2' %>
        </div>
      </div>
    </div>
    <div class="admin-table bg-white table-responsive mt-3 user_list_div">
      <%= render 'user_list', users: @users %>
    </div>
  </div>
</section>
