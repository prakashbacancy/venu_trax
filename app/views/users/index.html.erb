<section class="content-wrapper">
  <div class="content position-relative">
    <div class="d-flex">
      <div class="row">
        <div class="col-lg-12">
          <h5 class="text-gray d-inline">User Management</h5>
          <h5 class="text-gray d-inline"> <i class="fa fa-angle-right"></i></h5>
          <h5 class="text-dark d-inline">View User</h5>
        </div>
      </div>
    </div>
    <div class='row mt-5'>
      <div class="col-md-4">
        <%# <input type="text" id="searchbox" class="form-control " style="width: 50%;display: inline;"> %>
        <div class="row">
          <div class="col-md-8">
            <div class="form-group has-search">
              <span class="fa fa-search form-control-feedback"></span>
              <input type="text" class="form-control" placeholder="Search User" id="searchbox">
            </div>
          </div>
          <div class="col-md-4">
            <button class="btn btn-primary form-group search_btn">Search</button>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="add-item-btn mb-3 d-md-flex flex-wrap flex-row-reverse">
          <%= link_to "Add User", new_user_path, remote: true, class: 'btn btn-primary mb-2' %>
        </div>
      </div>
    </div>
    <div class="admin-table bg-white table-responsive mt-3">
      <table class="table table-bordered text-center w-100" id="user_list_table">
        <thead class="thead-dark">
          <th>Name</th>
          <th>Email Address</th>
          <th>Phone Number</th>
          <th>Assigned Role</th>
          <th>Action</th>
        </thead>
        <tbody>
    		<% @users.each do |user| %>
    			<tr>
    				<td><%= user.full_name %></td>
    				<td><%= user.email %></td>
    				<td><%= user.phone_no %></td>
            <td>-</td>
            <td>
              <div class="action-area-buttons">
                <%= link_to(' ', edit_user_path(user), remote: true, class: 'fa fa-pencil-alt') %>
                <%= link_to(' ', user_path(user), method: :delete, class: 'fa fa-trash', data: { confirm: 'Are you sure want to delete this User?' }) %>
              </div>
            </td>
    			</tr>
    		<% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<script>
  $(document).ready(function(){
    custom_datatable($('#user_list_table'));
  })
</script>
