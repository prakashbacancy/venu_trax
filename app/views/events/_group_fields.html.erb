<div class=" bg-white  mt-3 overflow-hidden">
  <% group.descendants.each do |group| %>
    <div class="shadow p-0 mb-3 bg-white rounded mt-4 detail_box">
      <div class="box-header border-bottom py-3">
        <div class="d-flex align-items-center justify-content-between flex-wrap">
          <div>
            <p class="text-dark2 fw-700 fs-16 text-uppercase"><%= group.label %></p>
          </div>
          <%= link_to 'Edit', edit_venue_event_path(event, group_id: group.id), class: 'btn btn-primary btn-sm', remote: true %>
        </div>
      </div>
      <div class="box-body">
        <% count = 0 %>
        <div class="admin-table bg-white table-responsive">
          <table class="table table-bordered w-100 mb-0 attachment-table">
            <thead class="thead-dark">
              <tr>
                <th>#</th>
                <th>Field Name</th>
                <th>Field Value</th>
              </tr>
            </thead>
            <tbody>
              <% if group.fields.present? %>
                <% group.fields.each do |field|%>
                  <tr>
                    <td><%= count = count + 1 %></td>
                    <td width="70%">
                      <div class="fs-15 <%= 'asterisk' if field.required? %>"><%= field.label %></div>
                      <div class="fw-400 text-gray mt-2 fs-14"><%= field.info %></div>
                    </td>
                    <td><div class="text-gray fs-14"><%= pretty_value(field, event) %></div></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan='3' class="text-center text-gray">Please Add Field from the Settings.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>
